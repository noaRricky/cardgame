<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deck_item_grid"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:rowCount="3"
    android:columnCount="4"
    >

    <ImageView
        android:id="@+id/deck_item_cardImage"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="3"
        android:layout_rowWeight="3"
        android:layout_columnWeight="3"
        android:layout_gravity="fill_vertical"
        android:contentDescription="@string/cardImage"
        />

    <TextView
        android:id="@+id/deck_item_cardName"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_column="1"
        android:layout_rowWeight="3"
        android:layout_columnWeight="2"
        android:gravity="center"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/deck_item_cardAttack"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="2"
        android:gravity="center"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/deck_item_cardLife"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="2"
        android:gravity="center"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/deck_item_cardType"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="2"
        android:gravity="center"
        android:textColor="@color/colorBlack"/>

    <CheckBox
        android:id="@+id/deck_item_cbSelect"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>

</GridLayout>